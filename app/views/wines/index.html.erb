<h1>Wines</h1>
<p>Available as of <%= formatted_time(@available_at) %></p>
<%= page_entries_info @wines %>
<ul>
<% @wines.each do |wine| %>
 <li>
  <%= link_to(wine.name, wine) %>
  by <%= wine.winery %><br/>
  <%= format_average_rating(wine) %>
  <% if wine.logentries.any? %>
    (out of <%= pluralize(wine.logentries.size, 'log entry') %>)
  <% end %>
</li>

<% end %>
</ul>
<%= paginate @wines %>