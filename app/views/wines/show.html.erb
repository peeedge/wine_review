<% content_for :name, @wine.name %>
<article class="wine">
  <header>
    <h2><%= @wine.name %></h2>
  </header>
  <p><label>Year:</label> <%= number_with_delimiter(@wine.year) %></p>
  <p><label>Winery:</label> <%= @wine.winery %></p>
  <p><label>Country:</label> <%= @wine.country %></p>
  <p><label>Varietal:</label> <%= @wine.varietal %></p>
  </article>

<p>
  Read all
  <%= link_to pluralize(@wine.logentries.size, 'logentry'), 
                        wine_logentries_path(@wine) %>
  </p>


<p><label>Average Review:</label> <%= format_average_rating(@wine) %></p>


<%= link_to 'All Wines', wines_path %> | <%= link_to 'Edit', edit_wine_path(@wine) %>

<%= button_to 'Delete', @wine,
				method: :delete,
				data: { confirm: 'Are you sure?' } %>